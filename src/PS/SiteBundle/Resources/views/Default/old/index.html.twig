{% extends '::index.html.twig' %}
{% block style %}
<style>
    .alert-danger {
        position:absolute;
        top:40px;
        right:20px;
    }
</style>
{% endblock %}

{% block content %}

    <section id="home" class="home-leaf leaf-signed" style="background-image: url({{ asset('bundles/parametre/image/large/2.jpg') }});" data-type="background" data-speed="10">
        <nav>
            <div>
                <a href="{{ path('homepage') }}">
                    <img src="{{ asset('bundles/parametre/image/small/_psm_w.png') }}" height="50px" width="auto"  alt="">
                </a>
            </div>

            <ul>
                <li>
                    <a href="{{ path('homepage') }}#home">accueil</a>
                </li>

                <li>
                    <a href="{{ path('homepage') }}#about-us">pass santé</a>
                </li>

                <li>
                    <a href="{{ path('homepage') }}#contact">contact</a>
                </li>
                {#{% include "UtilisateurBundle::connexion.html.twig" %}#}
            </ul>
        </nav>

        <div id="santemousso-carousel" class="carousel slide" data-ride="carousel">

            <ol class="carousel-indicators">
                <li data-target="#santemousso-carousel" data-slide-to="0" class="active"></li>
                <li data-target="#santemousso-carousel" data-slide-to="1"></li>
                <li data-target="#santemousso-carousel" data-slide-to="2"></li>
                <li data-target="#santemousso-carousel" data-slide-to="3"></li>
            </ol>

            <div class="carousel-inner">
                <div class="item active">
                    <img src="{{ asset('bundles/parametre/img/_PSM__index.jpg') }}" height="100%" width="100%" alt="">
                </div>

                <div class="item">
                    <img src="{{ asset('bundles/parametre/img/_PSM__girl.jpg') }}" height="100%" width="100%" alt="">
                </div>

                <div class="item">
                    <img src="{{ asset('bundles/parametre/img/_PSM__smart.jpg') }}" height="100%" width="100%" alt="">
                </div>

                <div class="item">
                    <img src="{{ asset('bundles/parametre/img/_PSM__sport.jpg') }}" height="100%" width="100%" alt="">
                </div>
            </div>

            <a class="left carousel-control" href="#santemousso-carousel" data-slide="prev">
                <span class="glyphicon glyphicon-menu-left"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#santemousso-carousel" data-slide="next">
                <span class="glyphicon glyphicon-menu-right"></span>
                <span class="sr-only">Next</span>
            </a>

            {% if is_granted("IS_AUTHENTICATED_REMEMBERED")== false %}
            <div class="santemousso-login">

                <a href="{{ path("fos_user_security_login") }}" target="_blank" class="">
                    <span class="flaticon-settings"></span>
                    <div class="flaticon-description"> Connexion | Inscription </div>
                </a>
            </div>
            {% endif %}

            {#<div class="santemousso-modal">
                <div class="santemousso-modal-leaf close-modal-windows"></div>
                <div class="santemousso-modal-contain">
                    <p class="closer-modal close-modal-windows">
                        <label class="close-modal-windows">X</label>
                    </p>
                    <hr />
                    <div id="santemousso-modal-container" class="tabs-panels">
                        <ul class="tabs">
                            {% block user_bundle %}
                                &#123;&#35;{{ render(controller("FOSUserBundle:Security:login")) }}
                                {{ render(controller("FOSUserBundle:Registration:register")) }}&#35;&#125;
                                &#123;&#35;{% include "UtilisateurBundle::layout.html.twig" %}&#35;&#125;
                            {% endblock %}

                        </ul>
                    </div>
                </div>
            </div>#}
            <div class="santemousso__id">
                {% form_theme form ':widget:fields-santemousso.html.twig' %}
                <form action="{{ path('patient_profil') }}" method="post" {{ form_enctype(form) }} id="patient_profil" class="">
                    <span class="input input--hoshi modal__popup--hoshi modal__popup--hoshi-2" id="emailing">
                        {{ form_widget(form) }}
                    </span>
                    <input type="submit" value="Profil" />
                    <div class="alert alert-danger pull-left {% if not app.getSession().getFlashBag().has('notice_patient') %}hide{% endif %}">
                        {% for message in app.getSession().getFlashBag().get('notice_patient') %}
                            {{ message }}
                        {% endfor %}
                    </div>
                </form>
            </div>
        </div>
    </section>

    <section id="about-us" class="about-us-leaf leaf-signed" style="background-image: url({{ asset('bundles/parametre/image/large/usage-sante-mousso.jpg') }});"  data-type="background" data-speed="20">
        <div class="about-contain">
            <div class="about-contain-left">
                <p style="background-image: url({{ asset('bundles/parametre/img/qr.png') }});"></p>
            </div>
            <div class="about-contain-right">
                <div class="about-info introduce-left-0">
                    <div class="about-info-icon">
                        <span class="flaticon-qr-code-on-mobile-phone-screen santemousso-description"></span>
                    </div>
                    <div class="about-info-text">
                        <h3>Un bijou médicale par code QR</h3>
                        <p>Le bijou d’identification médicale à code QR permettra à l'intervenant d’effectuer une prise en charge
                            médicale rapide et de contacter vos proches afin de les avertir de votre situation.
                            {#Ce qui réduira considérablement le délai de communication entre les services d'urgence et la famille.
                            C’est une source de tranquillité d’esprit, un véritable soulagement !#}
                        </p>
                    </div>
                </div>

                <div class="about-info introduce-left-1">
                    <div class="about-info-icon">
                        <span class="flaticon-heart santemousso-description"></span>
                    </div>
                    <div class="about-info-text">
                        <h3>Joli, résistant, et surtout indispensable</h3>
                        <p>Un bijou d’identification médicale à code QR n’est pas un bijou quelconque !
                            Il est bien plus qu’un accessoire de mode, il doit remplir sa fonction.
                            {#Portez-le partout et à tout moment : au bureau, en vacances à la plage, pendant votre jogging, à l’école ou en tenue de soirée !#}
                        </p>
                    </div>
                </div>

                <div class="about-info introduce-left-2">
                    <div class="about-info-icon">
                        <span class="flaticon-like santemousso-description"></span>
                    </div>
                    <div class="about-info-text">
                        <h3>Une solution efficace</h3>
                        <p>Nos produits sont sécuritaires, faciles d'utilisation, efficaces dans tous les pays et sans aucun frais annuel, ni d'activation.</p>
                    </div>
                </div>

                <div class="about-info introduce-left-3">
                    <div class="about-info-icon">
                        <span class="flaticon-chat santemousso-description"></span>
                    </div>
                    <div class="about-info-text">
                        <h3>Un call center accessible 24H</h3>
                        <p>Le numéro de la ligne d’urgence est inscrit sur le bracelet et accessible 24h sur 24h,
                            7 jours sur 7 pour l’intervenant qui est dans l’impossibilité d’accéder à vos informations au moyen du code QR.
                            {#À partir du numéro d’identification inscrit sur le bracelet, nous pourrons lui donner les informations à distance.#}</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section id="contact" class="contact-leaf leaf-signed" data-type="background" data-speed="40">
        <div class="contact-contain">
            {{ render(controller("SiteBundle:Default:contact")) }}

            <h4>
                <ul class="santemousso-panel">
                    <li>
						<span class="flaticon-facebook-logo-button" target="_blank">
							<a href="https://web.facebook.com/Santemousso/"></a>
						</span>
                    </li>
                    <li>
						<span class="flaticon-twitter-logo-button" target="_blank">
							<a href="https://twitter.com/AnicetDally"></a>
						</span>
                    </li>
                </ul>
                <p>&copy; Pass Santé {{"now"|date('Y')}}  | <a href="{{ asset('uploads/CGV.docx')}}">Termes et conditions</a></p>
            </h4>
            <!--</div>-->
        </div>
    </section>

{% endblock %}